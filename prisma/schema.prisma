generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../dev.db"
}

model Workflow {
  id String @id @default(cuid())
  userId String
  name String
  description String

  definition String
  status String

  createAt DateTime @default(now())
  updateAt DateTime @updatedAt

  execution WorkflowExecution[]
  @@unique([name , userId])
  
}

model WorkflowExecution {
  id String @id @default(cuid())
  workflowId String
  userId String
  trigger String
  status String
  
  createAt DateTime @default(now())
  startedAt DateTime?
  completed DateTime?

  phases ExecutionPhase[]


  workflow Workflow @relation(fields: [workflowId] , references: [id] , onDelete: Cascade)
}

model ExecutionPhase {
  id String @id @default(cuid())
  userId String
  status String
  number Int
  node String
  name String
  startedAt DateTime?
  completed DateTime?
  inputs String?
  outputs String?
  
  creditConsumer Int?

  workflowExecutionId String
  execution WorkflowExecution @relation(fields: [workflowExecutionId] , references: [id] , onDelete: Cascade)
}